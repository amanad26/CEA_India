<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/_4sdp"
    android:orientation="vertical"
    android:padding="@dimen/_2sdp"
    android:paddingVertical="@dimen/_2sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/orderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="start"
                android:lines="1"
                android:text="Prateek Shrivastava "
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="start"
                android:text="Prateek Shrivastava "
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Prateek Shrivastava "
                android:textColor="@color/black"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_22sdp"
                android:padding="@dimen/_2sdp"
                android:layout_height="@dimen/_25sdp"
                app:tint="@color/gray"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:src="@drawable/ic_baseline_remove_red_eye_24" />

            <ImageView
                android:id="@+id/image_dispatch"
                android:layout_width="@dimen/_23sdp"
                android:layout_height="@dimen/_25sdp"
                app:tint="@color/gray"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/express_delivery" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/image_delivered_green"
                android:layout_width="@dimen/_22sdp"
                app:tint="@color/colorAccent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingHorizontal="@dimen/_2sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:src="@drawable/express_delivery" />


            <ImageView
                android:id="@+id/image_delivered"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:paddingHorizontal="@dimen/_2sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:src="@drawable/ic_baseline_local_shipping_24_black" />



        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/view_divider" />

</LinearLayout>